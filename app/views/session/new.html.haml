%h2= flash[:error] if flash[:error].present?

%h1 Log in

= form_tag login_path, :class => 'form-inline' do
  %div.form-group
  = label_tag :username
  = text_field_tag :username, nil,:class => 'form-control', :autofocus => true
  %div.form-group
  = label_tag :password
  = password_field_tag :password, :class => 'form-control'
  %div.form-group
  =submit_tag 'Login'
