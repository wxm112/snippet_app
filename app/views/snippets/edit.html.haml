= form_for @snippet do |f|
  %div.form-group
  = f.label :name
  = f.text_field :name, :required => true, :value => @snippet.name, :autofocus => true, :class => 'form-control'
  %div.form-group
  = f.label :content
  = f.text_area :content, required: true, class: 'form-control', rows: 8


  = f.hidden_field :user_id, :value => @current_user.id
  %div.form-group
  = f.submit "Update"
